<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <!-- Tables
      ================================================== -->
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header d-flex justify-content-between align-items-center">
                    <h1 id="tables">Departamentos</h1>
                    <div>
                        <a class="btn btn-primary" href="dept/create"><i class="fa-solid fa-plus"></i></a>
                    </div>
                </div>

                <div class="bs-component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Sigla</th>
                                <th scope="col">Opções</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each departamentos }}
                            <tr class="table-dark">
                                <th scope="row"> {{ name }} </th>
                                <td>{{ sigla }}</td>
                                <td>{{ opcoes}}</td>
                                <td><a href="dept/update/{{id}}">Editar</a> <a href="dept/del/{{id}}">Remover</a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div><!-- /example -->
            </div>
        </div>
    </div>
</body>

</html>